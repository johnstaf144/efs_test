         <filter source="$ctx:AM_KEY_TYPE" regex="PRODUCTION">
            <then>
               <send>
                  <endpoint name="admin--ERMS-Entity-API_APIproductionEndpoint_0">
                     <http uri-template="https://erms-entity-api-v1-eip.apps.ose.cp.tio.systems/api"/>
                     <property name="ENDPOINT_ADDRESS"
                               value="https://erms-entity-api-v1-eip.apps.ose.cp.tio.systems/api"/>
                  </endpoint>
               </send>
            </then>
            <else>
               <send>
                  <endpoint name="admin--ERMS-Entity-API_APIsandboxEndpoint_0">
                     <http uri-template="none"/>
                     <property name="ENDPOINT_ADDRESS" value="none"/>
                  </endpoint>
               </send>
            </else>
         </filter>
      </inSequence>
      <outSequence>
         <class name="org.wso2.carbon.apimgt.gateway.handlers.analytics.APIMgtResponseHandler"/>
         <send/>
      </outSequence>
   </resource>
