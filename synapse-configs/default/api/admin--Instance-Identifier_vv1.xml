<?xml version="1.0" encoding="UTF-8"?>
<api xmlns="http://ws.apache.org/ns/synapse"
     name="admin--Instance-Identifier"
     context="/v1/instance-identifier"
     version="v1"
     version-type="context"
     transports="https">
   <resource methods="POST" url-mapping="/authors" faultSequence="fault">
      <inSequence>
         <property name="api.ut.backendRequestTime"
                   expression="get-property('SYSTEM_TIME')"/>
         <filter source="$ctx:AM_KEY_TYPE" regex="PRODUCTION">
            <then>
               <send>
                  <endpoint name="admin--Instance-Identifier_APIproductionEndpoint_0">
                     <http uri-template="https://instance-identifier-service-v1-eip.apps.ose.cp.tio.systems"/>
                     <property name="ENDPOINT_ADDRESS"
                               value="https://instance-identifier-service-v1-eip.apps.ose.cp.tio.systems"/>
                  </endpoint>
               </send>
            </then>
            <else>
               <send>
                  <endpoint name="admin--Instance-Identifier_APIsandboxEndpoint_0">
                     <http uri-template="admin"/>
                     <property name="ENDPOINT_ADDRESS" value="admin"/>
                  </endpoint>
               </send>
            </else>
         </filter>
      </inSequence>
      <outSequence>
         <class name="org.wso2.carbon.apimgt.gateway.handlers.analytics.APIMgtResponseHandler"/>
         <send/>
      </outSequence>
   </resource>
   <resource methods="POST" url-mapping="/affiliations" faultSequence="fault">
      <inSequence>
         <property name="api.ut.backendRequestTime"
                   expression="get-property('SYSTEM_TIME')"/>
         <filter source="$ctx:AM_KEY_TYPE" regex="PRODUCTION">
            <then>
               <send>
                  <endpoint name="admin--Instance-Identifier_APIproductionEndpoint_1">
                     <http uri-template="https://instance-identifier-service-v1-eip.apps.ose.cp.tio.systems"/>
                     <property name="ENDPOINT_ADDRESS"
                               value="https://instance-identifier-service-v1-eip.apps.ose.cp.tio.systems"/>
                  </endpoint>
               </send>
            </then>
            <else>
               <send>
                  <endpoint name="admin--Instance-Identifier_APIsandboxEndpoint_1">
                     <http uri-template="admin"/>
                     <property name="ENDPOINT_ADDRESS" value="admin"/>
                  </endpoint>
               </send>
            </else>
         </filter>
      </inSequence>
      <outSequence>
         <class name="org.wso2.carbon.apimgt.gateway.handlers.analytics.APIMgtResponseHandler"/>
         <send/>
      </outSequence>
   </resource>
   <resource methods="POST" url-mapping="/collaborations" faultSequence="fault">
      <inSequence>
         <property name="api.ut.backendRequestTime"
                   expression="get-property('SYSTEM_TIME')"/>
         <filter source="$ctx:AM_KEY_TYPE" regex="PRODUCTION">
            <then>
               <send>
                  <endpoint name="admin--Instance-Identifier_APIproductionEndpoint_2">
                     <http uri-template="https://instance-identifier-service-v1-eip.apps.ose.cp.tio.systems"/>
                     <property name="ENDPOINT_ADDRESS"
                               value="https://instance-identifier-service-v1-eip.apps.ose.cp.tio.systems"/>
                  </endpoint>
               </send>
            </then>
            <else>
               <send>
                  <endpoint name="admin--Instance-Identifier_APIsandboxEndpoint_2">
                     <http uri-template="admin"/>
                     <property name="ENDPOINT_ADDRESS" value="admin"/>
                  </endpoint>
               </send>
            </else>
         </filter>
      </inSequence>
      <outSequence>
         <class name="org.wso2.carbon.apimgt.gateway.handlers.analytics.APIMgtResponseHandler"/>
         <send/>
      </outSequence>
   </resource>
   <handlers>
      <handler class="org.wso2.carbon.apimgt.gateway.handlers.common.APIMgtLatencyStatsHandler"/>
      <handler class="org.wso2.carbon.apimgt.gateway.handlers.security.CORSRequestHandler">
         <property name="apiImplementationType" value="ENDPOINT"/>
      </handler>
      <handler class="org.wso2.carbon.apimgt.gateway.handlers.security.APIAuthenticationHandler">
         <property name="RemoveOAuthHeadersFromOutMessage" value="true"/>
         <property name="APILevelPolicy" value="Unlimited"/>
         <property name="APISecurity" value="oauth2"/>
      </handler>
      <handler class="org.wso2.carbon.apimgt.gateway.handlers.throttling.ThrottleHandler"/>
      <handler class="org.wso2.carbon.apimgt.gateway.handlers.analytics.APIMgtUsageHandler"/>
      <handler class="org.wso2.carbon.apimgt.gateway.handlers.analytics.APIMgtGoogleAnalyticsTrackingHandler">
         <property name="configKey" value="gov:/apimgt/statistics/ga-config.xml"/>
      </handler>
      <handler class="org.wso2.carbon.apimgt.gateway.handlers.ext.APIManagerExtensionHandler"/>
   </handlers>
</api>
